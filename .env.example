# YouTube Data API v3
# Get your key at: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_api_key_here

# Deepgram API (for audio transcription)
# Get your key at: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_api_key_here

# OpenAI API (for summary and QC)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# Database (local Postgres via Docker)
# IMPORTANT: Always use localhost for local development
# Only use Supabase URL when running production migrations (see docs/RELEASE_RUNBOOK.md)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/simplicity_finance_dev

# Production Database (Supabase) - DO NOT USE FOR LOCAL DEV
# Uncomment ONLY when running migrations against production:
# DATABASE_URL=postgresql://postgres.xxx@aws-1-us-east-1.pooler.supabase.com:6543/postgres
#
# Scripts that write to DB (seed, insert) have safety guards.
# To override and write to production, set: ALLOW_PROD_DB_WRITE=1
ALLOW_PROD_DB_WRITE=

# NextAuth.js (Authentication)
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (for authentication)
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Inngest (for workflow orchestration)
# For local dev, use: local
# For production, get from: https://app.inngest.com/
INNGEST_EVENT_KEY=local
INNGEST_SIGNING_KEY=your_signing_key_here

# AI Headshot Generation (Fal.ai)
# Get your key at: https://fal.ai/
FAL_KEY=

# Live Data Panel APIs
# Finnhub - Financial news (free tier available)
# Get your key at: https://finnhub.io
FINNHUB_API_KEY=

# Polygon - Market data (paid, free tier limited)
# Get your key at: https://polygon.io
POLYGON_API_KEY=

# Alpha Vantage - Earnings calendar (free tier available)
# Get your key at: https://www.alphavantage.co/support/#api-key
# Note: The "demo" key works for earnings calendar endpoint
ALPHA_VANTAGE_KEY=demo
